<style>
  .about-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .about-header h1 {
    font-family: var(--font-heading);
    font-size: 3rem;
    margin-bottom: 2.5rem;
  }

  .bio {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: 1.5rem;
  }

  .bio p {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: 1rem;
  }

  .detail-block {
    margin-bottom: 2.5rem;
  }

  .detail-block h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-border);
  }

  .detail-block ul {
    list-style: none;
  }

  .detail-block li {
    margin-bottom: 1.25rem;
    line-height: 1.5;
  }

  .detail-block li strong {
    display: block;
    font-size: 1.05rem;
  }

  .date-range {
    display: block;
    color: var(--color-orange);
    font-size: 0.85rem;
    font-weight: 500;
    margin: 0.15rem 0 0.25rem;
  }

  .role {
    display: block;
    color: var(--color-blue);
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0.15rem 0 0.25rem;
  }

  .muted {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .skill {
    background: var(--color-light-gray);
    color: var(--color-dark);
    padding: 0.3rem 0.85rem;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .interests p {
    color: var(--color-text-muted);
    font-style: italic;
    font-size: 0.95rem;
    margin-top: 0.5rem;
  }

  @media (max-width: 768px) {
    .about-page {
      padding: 2.5rem 1.25rem;
    }

    .about-header h1 {
      font-size: 2.25rem;
    }
  }
</style>
