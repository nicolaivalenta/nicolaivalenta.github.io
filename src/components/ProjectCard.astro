---
interface Props {
  title: string;
  description: string;
  techStack: string[];
  githubUrl?: string;
  liveUrl?: string;
}

const { title, description, techStack, githubUrl, liveUrl } = Astro.props;
---

<article class="project-card">
  <h3>{title}</h3>
  <p class="description">{description}</p>

  <div class="tech-stack">
    {techStack.map(tech => (
      <span class="tech-tag">{tech}</span>
    ))}
  </div>

  <div class="project-links">
    {githubUrl && (
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="link-btn">
        GitHub
      </a>
    )}
    {liveUrl && (
      <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="link-btn primary">
        Live Demo
      </a>
    )}
  </div>
</article>

<style>
  .project-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: 2rem;
    transition: transform var(--transition), box-shadow var(--transition);
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tech-tag {
    background: var(--color-light-gray);
    color: var(--color-accent);
    padding: 0.2rem 0.65rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .project-links {
    display: flex;
    gap: 0.75rem;
  }

  .link-btn {
    display: inline-block;
    padding: 0.45rem 1rem;
    border: 2px solid var(--color-text);
    border-radius: 4px;
    color: var(--color-text);
    font-weight: 500;
    font-size: 0.9rem;
    text-decoration: none;
    transition: background var(--transition), color var(--transition);
  }

  .link-btn:hover {
    background: var(--color-text);
    color: white;
  }

  .link-btn.primary {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .link-btn.primary:hover {
    background: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
  }
</style>
